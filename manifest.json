{
    "manifest_version": 3,
    "name": "Polar Highlighter",
    "version": "1.1",
    "icons": {
        "48": "icons/icon-128.png",
        "128": "icons/icon-128.png"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "type": "module"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "models/polar-model/*",
                "models/polar-model/onnx/*"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon-128.png",
            "32": "icons/icon-128.png"
        }
    }
}